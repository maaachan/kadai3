 <div class="container"> 
  <div class="row"> 
    <div class=col-md-3> 
   <%= render 'info', book: @book, user: @user%>
  </div>
  <div class='col-md-8 offset-md-1'>
  <h2>Book detail</h2>
  <table class="table">
    <thead></thead>
    <tbody>
      <tr>
      <td><%= image_tag @book.user.get_profile_image(100,100) %><br>
      <%= link_to @book.user.name, user_path(@user.id) %></td>
      <td><%=link_to  @book.title,book_path(@book) %></td>
      <td><%= @book.body  %></td>
      <% if @book.user == current_user %>
      <td><%= link_to "Edit", edit_book_path(@book) %></td>
			<td><%= link_to "Destroy", book_path(@book), method: :delete, "data-confirm" => "本当に消しますか?" %></td>
		</tr>
      </tr>
      <% end %>
    </tbody>
  </table>
  </div>
  </div>
  </div>
  
