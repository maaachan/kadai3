<div class="container">  <!-- この行を追加 -->
  <div class="row"> 
    <div class=col-md-3>
        <%= render 'info', book: @book, user: @user%>
    </div>
    <div class='col-md-8 offset-md-1'>
     <h2>Books</h2>
      <table class= "table">
      <thead>
        <tr>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @books.each do |book| %>
        <tr>
         <td><%= link_to user_path(book.user.id) do %>
             <%= image_tag book.user.get_profile_image(100,100)%>
             <% end %></td>
         <td><%= link_to book.title,book_path(book.id) %></td>
         <td><%= book.body %></td>
        </tr>
        <% end %>
      </tbody>
    
    </table>
   </div>
 </div>
</div>