<div class="container">  <!-- この行を追加 -->
  <div class="row"> 
    <div class=col-md-3>
      <%= render 'books/info', book: @book, user: @user%>
    </div>
    <div class='col-md-8 offset-md-1'>
     <h1>Users</h1>

    <table class="table">
    <thead>
      <tr>
        <th>image</th>
        <th>name</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
      <tr>
        <td><%= image_tag 'no_image', size: "100x100" %></td>
        <td><%= user.name %></td>
        <td><%= link_to "Show", user_path(user.id) %></td>
      </tr>
      <% end %>
      
    </tbody>
  </table>
  </div>
  </div>
  </div>
  
  
  
    
