
<div class="container">  
  <div class="row"> 
    <div class=col-md-3>
       <%= render 'books/info', book: @book, user: @user%>
    </div>
    <div class='col-md-8 offset-md-1'>
     <h3>Books</h3>
      <table class= "table">
      <thead>
        <tr>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
        </tr>
       </thead>
       <tbody>
      <% @books.each do |book| %>
       <tr>
         <td><%= image_tag book.user.get_profile_image(100,100) %></td>
        <td><%= link_to book.title, book_path(book.id) %></td>
        <th><%= book.body %></th>
        </tr>
    <% end %>
       </tbody>
       
    </table>
   </div>
  </div>
 </div>